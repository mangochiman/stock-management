<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <title>Mahara Wipha Bar</title>
  <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="description" content="">
  <meta name="author" content="">

  <link rel="stylesheet" type="text/css" href="/AircraftAdmin-Free/lib/bootstrap/css/bootstrap.css">
  <link rel="stylesheet" href="/AircraftAdmin-Free/lib/font-awesome/css/font-awesome.css">

  <link rel="stylesheet" type="text/css" href="/AircraftAdmin-Free/stylesheets/premium.css">

</head>
<body class=" theme-blue">


<div class="content" style="margin-left: 30px; width: 96%;">

  <div class="main-content" style="padding-top: 10px;">

    <div class="pull-left well">
      <table>
        <tbody>
        <tr>
          <td class="pull-right padding-right"><strong>Company Name: &nbsp;</strong></td>
          <td>Mahara Wipha Bar</td>
        </tr>
        <tr>
          <td class="pull-right padding-right"><strong>Report Type: &nbsp; </strong></td>
          <td>Incoming stock</td>
        </tr>
        <tr>
          <td class="pull-right padding-right"><strong>Product: &nbsp;</strong></td>
          <td>All</td>
        </tr>
        <tr>
          <td class="pull-right padding-right"><strong>Period: &nbsp;</strong></td>
          <td>N/A</td>
        </tr>
        <tr>
          <td class="pull-right padding-right"><strong>Date reported generated: &nbsp;</strong></td>
          <td><%= Date.today.strftime("%d-%b-%Y") %></td>
        </tr>
        </tbody>
      </table>
    </div>

    <table class="table table-bordered table-striped">
      <thead>
      <tr>
        <th>Name</th>
        <th>Part Number</th>
        <th>Product Label</th>
        <th>Starting inventory</th>
        <th>Stock (In)</th>
        <th>Stock (Out)</th>
        <th>Current stock</th>
        <th>Minimum required</th>
      </tr>
      </thead>
      <tbody>
      <% @products.each do |product| %>
        <tr>
          <td><%= product.name %></td>
          <td><%= product.part_number %></td>
          <td><%= product.label %></td>
          <td><%= product.starting_inventory %></td>
          <td><%= product.total_stock_ins %></td>
          <td><%= product.total_stock_outs %></td>
          <td><%= product.current_stock %></td>
          <td><%= product.minimum_required %></td>
        </tr>
      <% end %>
      </tbody>
    </table>

  </div>
</div>

</body>
</html>