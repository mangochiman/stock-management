<div class="panel panel-default">
  <a href="#page-stats" class="panel-heading" data-toggle="collapse">Quick stats</a>
  <div id="page-stats" class="panel-collapse panel-body collapse in">

    <div class="row">
      <div class="col-md-3 col-sm-6">
        <div class="knob-container">
          <input class="knob" data-width="200" data-min="0" data-max="500" data-displayPrevious="true" value="<%= @this_weeks_incoming_stock %>" data-fgColor="#92A3C2" data-readOnly=true;/>
          <h3 class="text-muted text-center">This week's incoming stock</h3>
        </div>
      </div>
      <div class="col-md-3 col-sm-6">
        <div class="knob-container">
          <input class="knob" data-width="200" data-min="0" data-max="2000" data-displayPrevious="true" value="<%= @this_months_incoming_stock %>" data-fgColor="#92A3C2" data-readOnly=true;/>
          <h3 class="text-muted text-center">This month's incoming stock</h3>
        </div>
      </div>
      <div class="col-md-3 col-sm-6">
        <div class="knob-container">
          <input class="knob" data-width="200" data-min="0" data-max="500" data-displayPrevious="true" value="<%= @this_weeks_outgoing_stock %>" data-fgColor="#92A3C2" data-readOnly=true;/>
          <h3 class="text-muted text-center">This week's outgoing stock</h3>
        </div>
      </div>
      <div class="col-md-3 col-sm-6">
        <div class="knob-container">
          <input class="knob" data-width="200" data-min="0" data-max="2000" data-displayPrevious="true" value="<%= @this_months_outgoing_stock %>" data-fgColor="#92A3C2" data-readOnly=true;/>
          <h3 class="text-muted text-center">This month's outgoing stock</h3>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <div class="panel panel-default">
      <div class="panel-heading no-collapse">Products running out of stock</div>
      <table class="table">
        <thead>
        <tr>
          <th>Name</th>
          <th>Part Number</th>
          <th>Product Label</th>
          <th>Starting inventory</th>
          <th>Stock (In)</th>
          <th>Stock (Out)</th>
          <th>Current stock</th>
          <th>Minimum required</th>
        </tr>
        </thead>
        <tbody>
        <% @running_out_of_stock.each do |product| %>
          <tr>
            <td><%= product.name %></td>
            <td><%= product.part_number %></td>
            <td><%= product.label %></td>
            <td><%= product.starting_inventory %></td>
            <td>&nbsp;<%= product.total_stock_ins %></td>
            <td>&nbsp;<%= product.total_stock_outs %></td>
            <td><%= product.current_stock %></td>
            <td><%= product.minimum_required %></td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <div class="panel panel-default">
      <div class="panel-heading no-collapse">Products not in stock</div>
      <table class="table">
        <thead>
        <tr>
          <th>Name</th>
          <th>Part Number</th>
          <th>Product Label</th>
          <th>Starting inventory</th>
          <th>Stock (In)</th>
          <th>Stock (Out)</th>
          <th>Current stock</th>
          <th>Minimum required</th>
        </tr>
        </thead>
        <tbody>
        <% @products_not_in_stock.each do |product| %>
          <tr>
            <td><%= product.name %></td>
            <td><%= product.part_number %></td>
            <td><%= product.label %></td>
            <td><%= product.starting_inventory %></td>
            <td>&nbsp;<%= product.total_stock_ins %></td>
            <td>&nbsp;<%= product.total_stock_outs %></td>
            <td><%= product.current_stock %></td>
            <td><%= product.minimum_required %></td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>


<style type="text/css">
  .knob{
    cursor: pointer;

  }
</style>