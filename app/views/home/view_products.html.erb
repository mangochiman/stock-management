<div class="search-well">
  <form class="form-inline" style="margin-top:0px;" action="/view_products" method="GET" id="searchForm">
    <input class="input-xlarge form-control" placeholder="Search product..." id="appendedInputButton" type="text" name="q">
    <button class="btn btn-default" type="button" onclick="submitSearchQuery();"><i class="fa fa-search"></i> Go
    </button>
  </form>
</div>

<table class="table">
  <thead>
  <tr>
    <th> #</th>
    <th>Product Name</th>
    <th>Minimum required</th>
    <th>Current stock</th>
    <th>Expected run out date</th>
  </tr>
  </thead>
  <tbody>
  <% count = 0 %>
  <% @products.each do |product| %>
    <tr>
      <% count = count + 1 %>
      <td><%= count %></td>
      <td><%= product.name  %></td>
      <td><%= product.minimum_required %></td>
      <td>&nbsp;</td>
      <td>&nbsp;</td>
    </tr>
  <% end %>
  </tbody>
</table>




<script type="text/javascript">
    function submitSearchQuery() {
        document.getElementById("searchForm").submit()
    }

    window.onload = function(){
        jQuery('.products-menu-nav-header').removeClass('collapsed');
        jQuery('.products-menu').addClass('in');
        jQuery('.view_products').addClass('active');
    }
</script>